{
    "manifest_version": 2,
    "name": "LinkedIncognito",
    "description": "Anonymizes candidates to reduce unconscious bias.",
    "version": "1.0",
    "browser_action": {
        "default_title": "LinkedIncognito"
    },
    "content_scripts": [
        {
            "matches": [
                "*://angel.co/*",
                "*://*.linkedin.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}
